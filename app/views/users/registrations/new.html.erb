<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="input-field">
    <%= f.text_field :name, autofocus: true %>
    <%= f.label :name %><br />
  </div>

  <div class="input-field">
    <%= f.email_field :email %>
    <%= f.label :email %><br />
  </div>

  <div class="input-field">
    <%= f.text_area :profile, class: "materialize-textarea" %>
    <%= f.label :profile, "Perfil" %><br />
  </div>

  <div class="input-field">
    <%= f.select :city_id, City.all.map{|c| ["#{c.name} - #{c.country.name}", c.id]}, {prompt: "Seleccione ciudad"}, class:"select-dropdown" %>
    <%= f.label :city_id, "Ciudad" %><br />
  </div>


  <div class="input-field">

    <%= f.password_field :password, autocomplete: "off" %>
    <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="input-field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.label :password_confirmation %><br />
  </div>

  <div class="input-field">
    <button class="btn waves-effect waves-light red" type="submit" name="action">Enviar
      <i class="material-icons right">send</i>
    </button>
  </div>

<% end %>

<%= render "users/shared/links" %>

<script type="text/javascript">
  document.addEventListener("turbolinks:load", function() {
    Materialize.updateTextFields();
  });
</script>

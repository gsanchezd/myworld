<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.description %></td>
        <td><%= job.city.try(:name) %></td>
        <td><%= link_to 'Postular', apply_job_path(job) %></td>
        <!-- <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

